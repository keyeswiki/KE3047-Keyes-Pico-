/*
 * 文件名 : 继电器
 * 描述 : 继电器打开和关闭.
 * 作者 : www.keyes-robot.com
*/
#define  Relay  16 // 定义了数字引脚16
void setup()
{
pinMode(Relay, OUTPUT); // 数字 "Relay" 作为输出
}
void loop()
{
digitalWrite(Relay, HIGH); // 打开继电器
delay(1000); //延时1秒
digitalWrite(Relay, LOW); // 关闭继电器
delay(1000); // 延时1秒
}
